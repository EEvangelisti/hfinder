{
    "d": {
        "mode": "train",
        "type": "str",
        "long": "tiff_dir",
        "default": "data",
        "help": "folder containing training data"},
    "t": {
        "mode": "*",
        "type": "str",
        "long": "auto_threshold",
        "default": "auto",
        "help": "Thresholding strategy: {auto, otsu, isodata, yen, li, triangle} or numeric (percentile <1, absolute ≥1). ‘auto’ selects Otsu or Triangle based on skewness."},
    "min": {
        "mode": "preprocess|train",
        "type": "int",
        "long": "min_area_px",
        "default": 20,
        "help": "Remove contours smaller than this area (pixels²); raise it to suppress speckles and debris."},
    "dist" : {
        "mode": "preprocess|train",
        "type": "int",
        "long": "min_distance",
        "default": 2,
        "help": "Minimum Euclidean spacing between seed peaks (in pixels) before watershed; peaks closer than this are merged. Lower values split touching objects more; higher values yield fewer splits."},
    "w" : {
        "mode": "preprocess|train",
        "type": "bool",
        "long": "watershed",
        "default": 0,
        "help": "Enable watershed splitting of touching objects after binarization; helps separate merged instances."},
    "s" : {
        "mode": "train",
        "type": "tuple",
        "long": "target_size",
        "default": "(640, 640)",
        "help": "size of training images"},
    "e": {
        "mode": "train",
        "type": "int",
        "long": "epochs",
        "default": 100,
        "help": "number of training epochs"},
    "m": {
        "mode": "train",
        "type": "str",
        "long": "model",
        "default": "yolov8n-seg.pt",
        "help": "YOLO model"},
    "b": {
        "mode": "*",
        "type": "bool",
        "long": "debug_mode",
        "default": 0,
        "help": "switch on/off debug mode"},
    "v": {
        "mode": "train",
        "type": "float",
        "long": "validation_frac",
        "default": 0.2,
        "help": "fraction used for validation"}
}
